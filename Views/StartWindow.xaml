<Window x:Class="DevToolVault.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DevToolVault" Height="650" Width="900" 
        WindowStartupLocation="CenterScreen"
        Background="#FFEEEEEE">

    <DockPanel>

        <!-- Menu superior -->
        <Menu DockPanel.Dock="Top" Background="#FF2D2D30" Foreground="White" FontWeight="Bold">
            <MenuItem Header="_Arquivo">
                <MenuItem Header="Visualizar Estrutura" Click="MenuVisualizarEstrutura_Click" />
                <MenuItem Header="Exportar Código" Click="MenuExportarCodigo_Click" />
                <Separator/>
                <MenuItem Header="Sair" Click="MenuSair_Click" />
            </MenuItem>
        </Menu>

        <!-- Conteúdo principal - fundo cinza claro -->
        <Border Background="#FFD3D3D3" Margin="10" CornerRadius="5" >
            <!-- Pode colocar aqui uma imagem, logo, instruções, etc -->
            <Grid>
                <TextBlock Text="Bem-vindo ao DevToolVault" FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FF2D2D30"/>
            </Grid>
        </Border>

    </DockPanel>
</Window>
