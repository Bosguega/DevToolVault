<Window x:Class="DevToolVault.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DevToolVault" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Menu no topo -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Arquivo">
                <MenuItem Header="_Estrutura" Click="MenuItem_Estrutura_Click"/>
                <MenuItem Header="_Exportar Código" Click="MenuItem_ExportarCodigo_Click"/>
                <Separator/>
                <MenuItem Header="_Sair" Click="MenuItem_Sair_Click"/>
            </MenuItem>
            <MenuItem Header="_Ajuda">
                <MenuItem Header="_Sobre" Click="MenuItem_Sobre_Click"/>
            </MenuItem>
        </Menu>

        <!-- Frame para carregar páginas -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
