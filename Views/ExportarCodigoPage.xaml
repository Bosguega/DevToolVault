<Page x:Class="DevToolVault.Views.ExportarCodigoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Exportar Código">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <Button Content="Selecionar Pasta" Click="BtnSelecionarPasta_Click" Margin="0,0,5,0"/>
            <Button Content="Gerar Lista" Click="BtnGerarLista_Click"/>
        </StackPanel>

        <TreeView x:Name="TvArquivos" Grid.Row="1" />

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Exportar Selecionados" Click="BtnExportarSelecionados_Click"/>
        </StackPanel>
    </Grid>
</Page>
