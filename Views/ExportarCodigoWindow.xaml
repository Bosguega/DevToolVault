<Window x:Class="DevToolVault.Views.ExportarCodigoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exportar Código" Height="500" Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Pasta do projeto -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
            <Label Content="Pasta do Projeto:" Width="120"/>
            <TextBox x:Name="txtProjectPath" Width="400" Margin="5,0"/>
            <Button x:Name="btnBrowseProject" Content="Buscar..." Width="80" Click="BtnBrowseProject_Click"/>
        </StackPanel>

        <!-- Pasta de destino -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
            <Label Content="Pasta Destino:" Width="120"/>
            <TextBox x:Name="txtOutputPath" Width="400" Margin="5,0"/>
            <Button x:Name="btnBrowseOutput" Content="Buscar..." Width="80" Click="BtnBrowseOutput_Click"/>
        </StackPanel>

        <!-- Opções -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
            <CheckBox x:Name="chkIncludeSubfolders" Content="Incluir subpastas" IsChecked="True" Margin="5,0"/>
            <CheckBox x:Name="chkPreserveStructure" Content="Manter estrutura" IsChecked="True" Margin="5,0"/>
        </StackPanel>

        <!-- Lista de arquivos -->
        <ListView x:Name="lstFiles" Grid.Row="3" Margin="0,5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Arquivo" Width="300" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Caminho" Width="350" DisplayMemberBinding="{Binding Path}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Botões -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnScan" Content="Escanear" Width="100" Margin="5,0" Click="BtnScan_Click"/>
            <Button x:Name="btnExport" Content="Exportar" Width="100" Margin="5,0" Click="BtnExport_Click"/>
        </StackPanel>
    </Grid>
</Window>