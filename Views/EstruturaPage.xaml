<Page x:Class="DevToolVault.Views.EstruturaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Estrutura">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <Button Content="Selecionar Pasta" Click="BtnSelecionarPasta_Click" Margin="0,0,5,0"/>
            <Button Content="Atualizar Estrutura" Click="BtnAtualizarEstrutura_Click"/>
        </StackPanel>

        <TextBox x:Name="TxtEstrutura" Grid.Row="1" FontFamily="Consolas" FontSize="14" 
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                 IsReadOnly="True" TextWrapping="NoWrap" />

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Copiar" Click="BtnCopiar_Click" Margin="0,0,5,0"/>
            <Button Content="Exportar" Click="BtnExportar_Click"/>
        </StackPanel>
    </Grid>
</Page>
