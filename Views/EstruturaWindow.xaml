<Window x:Class="DevToolVault.Views.EstruturaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerar Estrutura de Pastas" Height="600" Width="800" MinWidth="600" MinHeight="400">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="191*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Linha 1: Caminho e botão Buscar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <TextBox x:Name="txtFolderPath" Width="500" Height="25" VerticalAlignment="Center" Margin="0,0,8,0" />
            <Button x:Name="btnBrowse" Content="Buscar..." Width="80" Click="BtnBrowse_Click"/>
        </StackPanel>

        <!-- Linha 2: Opções e botão Gerar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top" Grid.ColumnSpan="2" >
            <Button x:Name="btnSelectProjectType" Content="Selecionar Tipo de Projeto" Width="150" Margin="0,0,10,0" Click="BtnSelectProjectType_Click"/>
            <TextBlock x:Name="txtCurrentProfile" Text="Perfil atual: Não selecionado" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="btnGenerate" Content="Gerar Estrutura" Width="120" Click="BtnGenerate_Click"/>
            <Button x:Name="btnDebug" Content="Depurar" Width="80" Margin="10,0,0,0" Click="BtnDebug_Click"/>
        </StackPanel>

        <!-- Linha 3: TextBox multiline para mostrar estrutura gerada -->
        <TextBox x:Name="txtStructure" Grid.Row="2" 
                 VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas" FontSize="14" 
                 TextWrapping="NoWrap" 
                 IsReadOnly="True" 
                 AcceptsReturn="True"
                 Background="#FFF0F0F0" Grid.ColumnSpan="2"
                 />

        <!-- Linha 4: Botões copiar e salvar -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0" Grid.Column="1">
            <Button x:Name="btnCopy" Content="Copiar" Width="80" Margin="0,0,8,0" Click="BtnCopy_Click"/>
            <Button x:Name="btnSave" Content="Salvar" Width="80" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>